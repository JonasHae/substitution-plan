<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:listDivider">@color/dividerColor</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog.Dark</item>
        <item name="cardViewStyle">@style/AppTheme.CardView</item>
    </style>

    <style name="AppTheme.AlertDialog.Dark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

</resources>
