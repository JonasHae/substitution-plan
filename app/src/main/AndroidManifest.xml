<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="de.jonashaeusler.vertretungsplan">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="de.jonashaeusler.vertretungsplan.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="de.jonashaeusler.vertretungsplan.ui.main.MainActivity"/>

        <activity
            android:name="de.jonashaeusler.vertretungsplan.ui.courses.CourseManagerActivity"
            android:label="@string/courses"
            android:parentActivityName="de.jonashaeusler.vertretungsplan.ui.main.MainActivity"/>

    </application>

</manifest>
